                                    bg='#ffebcc', fg='#8B4513')
        kitchen_frame.pack(fill='both', padx=20, pady=10, expand=True)
        
        # æ±‰å ¡å±•ç¤ºå° - æ”¹ä¸ºCanvasä»¥æ”¯æŒåŠ¨ç”»
        burger_frame = tk.Frame(kitchen_frame, bg='#ffcc99', height=200)
