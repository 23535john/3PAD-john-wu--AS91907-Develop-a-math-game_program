        # æ·»åŠ ç›®æ ‡æ±‰å ¡å±‚æ•°æ˜¾ç¤º
        self.lbl_target = tk.Label(status, text='Target: 0', bg='#5a9', fg='cyan', 
                                 font=('Comic Sans MS', 12))
        self.lbl_target.pack(side='right', padx=10)

        # é¢˜ç›®æ˜¾ç¤ºåŒºåŸŸ
        question_frame = tk.Frame(self, bg='#e6f7ff', bd=2, relief='groove')
