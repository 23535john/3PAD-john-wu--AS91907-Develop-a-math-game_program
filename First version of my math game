        self.flash_id = None
        self.selected_ingredients = []
        self.target_burger_layers = 0  # ç›®æ ‡æ±‰å ¡å±‚æ•°
        self.animation_id = None
        self.animation_objects = []  # å­˜å‚¨åŠ¨ç”»å¯¹è±¡

